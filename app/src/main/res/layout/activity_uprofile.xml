<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graylight"
    android:orientation="vertical">
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="405dp">
         <LinearLayout
             android:background="@drawable/gradientbackground"
             android:layout_width="match_parent"
             android:layout_height="350dp"
             android:orientation="vertical">
             <ImageView
                 android:layout_marginTop="45dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:src="@drawable/user"/>
             <TextView
                 android:id="@+id/tname"
                 android:layout_marginTop="10dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:hint="Name"
                 android:textColor="#fff"
                 android:textStyle="bold"
                 android:textSize="21sp"/>
             <TextView
                 android:id="@+id/tid"
                 android:layout_marginTop="10dp"
                 android:layout_gravity="center_horizontal"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:hint="Id"
                 android:textColor="@color/colorPrimary"
                 android:textSize="16sp"/>
         </LinearLayout>
         <android.support.v7.widget.CardView
             android:layout_width="400dp"
             android:layout_height="120dp"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="275dp">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:orientation="horizontal"
                 android:weightSum="3">
                 <LinearLayout
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Ward No"
                         android:textSize="20sp"
                         />
                     <TextView
                         android:id="@+id/tward_no"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:hint="ward_no"
                         android:textStyle="bold"
                         android:textSize="20sp"
                         android:paddingTop="10dp"
                         android:textColor="@color/startblue"/>

                 </LinearLayout>
                 <LinearLayout
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Ward Name"
                         android:textSize="20sp"
                         />
                     <TextView
                         android:id="@+id/tward_name"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:hint="ward_name"
                         android:textStyle="bold"
                         android:textSize="20sp"
                         android:paddingTop="10dp"
                         android:textColor="@color/startblue"/>

                 </LinearLayout>
                 <LinearLayout
                     android:gravity="center"
                     android:orientation="vertical"
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="match_parent">
                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="City"
                         android:textSize="20sp"
                         />
                     <TextView
                         android:id="@+id/tcity"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:hint="city"
                         android:textStyle="bold"
                         android:textSize="20sp"
                         android:paddingTop="10dp"
                         android:textColor="@color/startblue"/>

                 </LinearLayout>
             </LinearLayout>

         </android.support.v7.widget.CardView>
     </RelativeLayout>

     <LinearLayout
         android:layout_width="360dp"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_gravity="center"
         android:layout_marginTop="45dp">
         <LinearLayout
             android:orientation="horizontal"
             android:paddingLeft="25dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:textStyle="bold"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:text="Email"
                 android:textSize="16dp"/>
             <TextView
                 android:id="@+id/tedit"
                 android:textStyle="bold"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="50dp"
                 android:text="mail_id"/>
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="25dp"
             android:orientation="horizontal"
             android:paddingLeft="25dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
              <TextView
                 android:textStyle="bold"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:text="Contact No"
                  android:textSize="15dp"/>
             <TextView
                 android:textStyle="bold"
                 android:id="@+id/tcontact"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="11dp"
                 android:text="contact_no"/>
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="25dp"
             android:orientation="horizontal"
             android:paddingLeft="25dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
              <TextView
                 android:textStyle="bold"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:text="State"
                  android:textSize="16dp"/>
             <TextView
                 android:textStyle="bold"
                 android:id="@+id/tstate"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="54dp"
                 android:text="State"/>
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="25dp"
             android:orientation="horizontal"
             android:paddingLeft="25dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
               <TextView
                 android:textStyle="bold"
                   android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:text="Pincode"
                   android:textSize="16dp"/>

             <TextView
                 android:textStyle="bold"
                 android:id="@+id/tpincode"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="35dp"
                 android:text="Pincode"/>
         </LinearLayout>
         <LinearLayout
             android:layout_marginTop="25dp"
             android:orientation="horizontal"
             android:paddingLeft="25dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
             <TextView
                 android:textStyle="bold"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="20dp"
                 android:text="Password "
                 android:textSize="16dp"/>

             <TextView
                 android:textStyle="bold"
                 android:id="@+id/password"
                 android:layout_gravity="center_vertical"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:paddingLeft="18dp"
                 android:text="Password "/>
         </LinearLayout>
     </LinearLayout>

     <Button
         android:textColor="#fff"
         android:background="@drawable/button_bg"
         android:layout_marginTop="35dp"
         android:layout_gravity="center_horizontal"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Logout"/>


 </LinearLayout>

</ScrollView>